# Snugs & Kisses Healthcare Platform - Development Dockerfile
# Hot-reload development environment with healthcare debugging tools

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install development tools for healthcare platform debugging
RUN apk add --no-cache curl git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Create healthcare development user
RUN addgroup -g 1001 -S healthcare && \
    adduser -S healthcare -u 1001 -G healthcare

# Set up development environment
ENV NODE_ENV=development
ENV VITE_ENVIRONMENT=development
ENV CHOKIDAR_USEPOLLING=true

# Expose development server port
EXPOSE 5173

# Health check for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:5173/ || exit 1

# Labels for development environment
LABEL maintainer="healthcare-dev-team@snugsandkisses.com"
LABEL environment="development"
LABEL description="Snugs & Kisses Healthcare Platform - Development Environment"

# Switch to healthcare user for security
USER healthcare

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]