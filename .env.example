# Snugs & Kisses Healthcare Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ZOHO CATALYST CONFIGURATION (Healthcare Platform Backend)
# =============================================================================

# Catalyst Project ID for the healthcare platform
VITE_CATALYST_PROJECT_ID=your_catalyst_project_id_here

# Environment: development, staging, production
VITE_ENVIRONMENT=development

# Catalyst App URL for your healthcare platform
VITE_CATALYST_APP_URL=https://your-project.development.catalystserverless.com

# =============================================================================
# ZOHO API CONFIGURATION (Healthcare Services Integration)
# =============================================================================

# OAuth2 Credentials for Zoho API Access
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here

# =============================================================================
# ZOHO HEALTHCARE SERVICE URLs (Optional - Defaults Provided)
# =============================================================================

# Zoho CRM API for patient/client management
ZOHO_CRM_API_URL=https://www.zohoapis.com/crm/v6

# Zoho Books API for billing and invoicing
ZOHO_BOOKS_API_URL=https://books.zoho.com/api/v3

# Zoho Campaigns API for healthcare communications
ZOHO_CAMPAIGNS_API_URL=https://campaigns.zoho.com/api/v1.1

# Zoho Bookings API for appointment scheduling
ZOHO_BOOKINGS_API_URL=https://bookings.zoho.com/api/v1

# Zoho Analytics API for healthcare metrics
ZOHO_ANALYTICS_API_URL=https://analyticsapi.zoho.com/api

# Zoho Sign API for healthcare documents
ZOHO_SIGN_API_URL=https://sign.zoho.com/api/v1

# Zoho Learn API for training modules
ZOHO_LEARN_API_URL=https://learn.zoho.com/api/v1

# Zoho Zia API for AI features (OCR, sentiment analysis)
ZOHO_ZIA_API_URL=https://zia.zoho.com/api/v1

# =============================================================================
# HEALTHCARE PLATFORM CONFIGURATION
# =============================================================================

# Application Name
VITE_APP_NAME="Snugs & Kisses Healthcare Platform"

# Application Version
VITE_APP_VERSION=1.0.0

# Healthcare Platform Domain
VITE_APP_DOMAIN=your-healthcare-domain.com

# Support Contact Information
VITE_SUPPORT_EMAIL=support@your-healthcare-domain.com
VITE_SUPPORT_PHONE=+1-555-CARE-NOW

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key for local development (DO NOT use in production)
JWT_SECRET=your_jwt_secret_for_development_only

# Session Timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# HIPAA Compliance Mode (true/false)
VITE_HIPAA_COMPLIANCE=true

# Audit Logging Level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Server Port
VITE_PORT=5173

# Development Mode Features
VITE_DEV_MODE=true

# Mock Data for Development
VITE_USE_MOCK_DATA=false

# Debug Mode for Healthcare Features
VITE_DEBUG_HEALTHCARE=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Analytics
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Error Tracking (e.g., Sentry DSN)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true

# CDN URL for Static Assets
VITE_CDN_URL=https://cdn.your-healthcare-domain.com

# =============================================================================
# HEALTHCARE FEATURE FLAGS
# =============================================================================

# Enable Video Consultations
VITE_ENABLE_VIDEO_CALLS=true

# Enable OCR Document Processing
VITE_ENABLE_OCR_PROCESSING=true

# Enable AI Caregiver Matching
VITE_ENABLE_AI_MATCHING=true

# Enable HIPAA Audit Logging
VITE_ENABLE_AUDIT_LOGGING=true

# Enable Automated Compliance Monitoring
VITE_ENABLE_COMPLIANCE_MONITORING=true

# Enable Employee Wellness Program
VITE_ENABLE_WELLNESS_PROGRAM=true

# =============================================================================
# DATABASE CONFIGURATION (if using additional databases)
# =============================================================================

# Backup Database URL (optional)
DATABASE_BACKUP_URL=your_backup_database_url_here

# Analytics Database URL (optional)
ANALYTICS_DATABASE_URL=your_analytics_database_url_here

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM_ADDRESS=noreply@your-healthcare-domain.com

# SMS Service Configuration
SMS_SERVICE_API_KEY=your_sms_service_api_key_here

# Video Conferencing Service
VIDEO_SERVICE_API_KEY=your_video_service_api_key_here

# Document Storage Service
STORAGE_SERVICE_API_KEY=your_storage_service_api_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
MONITORING_API_KEY=your_monitoring_api_key_here

# Log Aggregation Service
LOG_SERVICE_API_KEY=your_log_service_api_key_here

# Health Check Endpoint
VITE_HEALTH_CHECK_URL=/api/health

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all placeholder values with your actual configuration
# 2. Never commit the actual .env file to version control
# 3. Ensure HIPAA compliance by securing all sensitive data
# 4. Use strong, unique values for all secrets and API keys
# 5. Consider using environment-specific .env files (.env.development, .env.production)
# 6. Validate all environment variables at application startup
# 7. Use encrypted values for production secrets
# 8. Regularly rotate API keys and secrets
# 9. Monitor access to environment variables in production
# 10. Follow principle of least privilege for all service accounts